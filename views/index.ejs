<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/index.css">
    <link rel="stylesheet" href="/styles/homepage.css">
    <title>Mini Messageboard</title>
</head>
<body>
    <%- include('navbar',{addnew:true}) %>
    <div class="messages">
        <% messages.forEach((message,i) => { %>
            <div class="msg">
                <p class="by"><%= message.username %></p>
                <p class="text"><%= message.message %></p>
                <div class="bottom">
                    <p class="date"><%= message.added_ago %></p>
                    <a href="/message/<%=message.id%>">
                        <button>Open</button>
                    </a>
                </div>
            </div>

        <% }); %>
        
    </div>

</body>
</html>
